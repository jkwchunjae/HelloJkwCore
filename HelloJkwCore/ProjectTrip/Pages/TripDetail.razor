@inherits JkwPageBase;
@page "/trip/trip/{tripId}";
@using KakaoMapBlazor;

<KakaoMapComponent
    OnMapCreated="OnMapCreated"
    Style="width: 100%; height: 100%;"
></KakaoMapComponent>

@if (trip != null)
{
<div style="width: 600px; top: 0; left: 0; z-index: 1; position: absolute;">
    <div style="padding: 15px;">
        <h3>@trip.Title (@trip.BeginTime.ToString("yyyy.M.d") - @trip.EndTime.ToString("M.d"))</h3>
        <div>
            @foreach (var user in partners)
            {
                <MudChip Size="Size.Small">@user.DisplayName</MudChip>
            }
            <MudIconButton Icon="@Icons.Filled.Add" OnClick="OpenPartnerDialog" Size="Size.Small"></MudIconButton>
        </div>
    </div>
</div>
}