@inherits JkwPageBase
@page "/diary/edit/{DiaryName}/{Date}"

<PageTitle>일기장 수정</PageTitle>

@if (HasDiaryContent)
{
    <MudGrid>
        <MudItem>
            <MudText Typo="Typo.h4">
                @View.DiaryContents[0].Date.ToString("yyyy.MM.dd dddd")
            </MudText>
        </MudItem>
    </MudGrid>
    <MudGrid>
        @foreach (var content in View.DiaryContents)
        {
        <MudItem Style="width: 100%">
            <MudTextField T="string" @bind-Value="content.Text" Lines="15" Style="line-height: 30px;" AutoFocus="true"/>
        </MudItem>
        }
    </MudGrid>
    <MudGrid>
        <MudItem>
            <OneClickButton OnClick="EditDiary" StartIcon="@Icons.Material.Filled.Save" Variant="Variant.Filled" Color="Color.Info">
                수정
            </OneClickButton>
        </MudItem>
    </MudGrid>
}