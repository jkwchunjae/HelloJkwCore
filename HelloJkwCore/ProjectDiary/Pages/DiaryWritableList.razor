@inherits JkwPageBase

@if (UserDiaryInfo?.WriterList?.Any() ?? false)
{
    <MudText Typo="Typo.h5">내가 쓸 수 있는 일기장</MudText>
<MudList>
  @foreach (var writable in UserDiaryInfo.WriterList)
  {
    var diaryPath = $"/diary/{writable}";
    var label = writable.Name.ToLower() == "summer" ? "하정이 육아일기장" : writable.Name;
    <MudListItem>
      <MudButton Href="@diaryPath" Variant="Variant.Outlined">@label</MudButton>
    </MudListItem>
  }
</MudList>
}

