@inherits JkwLayoutBase
@using ProjectTrip.Pages

<MudThemeProvider Theme="currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudButton Href="/">
            <MudText Typo="Typo.h5" Class="ml-3" Style="font-family: 'Kaushan Script'; color: #fed136;">Hello JKW!</MudText>
        </MudButton>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Filled.Brightness4" Color="Color.Inherit" Edge="Edge.End" OnClick="() => ToggleTheme()" />
    </MudAppBar>
@if (Navi.Uri.Contains("/trip"))
{
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <TripNavMenu />
    </MudDrawer>
    <MudMainContent Style="height: 100%;">
        <MudPaper Elevation="0" Style="background-color: inherit; height: 100%">
            @Body
        </MudPaper>
    </MudMainContent>
}
else
{
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudPaper Elevation="0" Style="background-color: inherit;">
            <MudContainer Style="padding-top: 15px;">
                @Body
            </MudContainer>
        </MudPaper>
    </MudMainContent>
}
</MudLayout>

