@inherits JkwPageBase

<MudNavMenu Class="mud-nav-menu-custom">
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
        Home
    </MudNavLink>
    <AuthorizeView>
        <NotAuthorized>
            <MudNavLink Href="login" Icon="@Icons.Material.Filled.Login">
                Login
            </MudNavLink>
        </NotAuthorized>
        <Authorized>
            <MudNavLink Href="user" Icon="@Icons.Material.Filled.Person">
                @context.User.Identity.Name
            </MudNavLink>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Policy="Diary">
        <Authorized>
            <MudNavLink Href="diary" Icon="@Icons.Material.Filled.MenuBook">
                일기장
            </MudNavLink>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Roles="Admin">
        <Authorized>
            <MudNavLink Href="diary/admintool" Icon="@Icons.Material.Filled.MenuBook">
                일기장 관리
            </MudNavLink>
        </Authorized>
    </AuthorizeView>
    <MudNavLink Href="baduk" Icon="@Icons.Material.Filled.Window">
        바둑
    </MudNavLink>
    <AuthorizeView Roles="Admin">
        <Authorized>
            <MudNavLink Href="users" Icon="@Icons.Material.Filled.People">
                유저 관리
            </MudNavLink>
        </Authorized>
    </AuthorizeView>
</MudNavMenu>
