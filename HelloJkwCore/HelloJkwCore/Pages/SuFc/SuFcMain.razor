@inherits JkwPageBase
@page "/sufc"

@using Common; 

<h1>수FC</h1>

@if (!IsAuthenticated)
{
    <RadzenButton Click="Navi.GoLoginPage" Text="로그인" />
}
else
{
    <a class="btn btn-outline-primary" href="/sufc/member">회원</a>
    @if (User?.Roles?.Contains(UserRole.SuFcAdmin) ?? false)
    {
    <a class="btn btn-outline-primary" href="/sufc/teammaker">팀짜기</a>
    }
    <a class="btn btn-outline-primary" href="/sufc/schedule">모임관리</a>
}


<div>
    @foreach (var schedule in ActiveSchedules)
    {
    <div>
        <SuFcActiveSchedule Schedule="schedule" ScheduleChanged="OnScheduleChanged"></SuFcActiveSchedule>
    </div>
    }
</div>
