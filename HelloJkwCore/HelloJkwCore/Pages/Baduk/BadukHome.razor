@page "/baduk"
@inherits JkwPageBase

<BadukSettingBoxComponent
                          @bind-Board=Board
                          ></BadukSettingBoxComponent>

<BadukBoardComponent
                     @bind-Board=Board
                     ></BadukBoardComponent>

@if (IsAuthenticated)
{
<BadukSaveDataComponent
                        Board=Board
                        OnChangeGameData="((gameData) => ChangeGameData(gameData))"
                        OnSaveBadukData="((gameData) => OnGameDataSaved(gameData))"
                        OnDeleteGameData="(() => OnGameDataDeleted())"
                        ></BadukSaveDataComponent>
}

<div style="height: 100px;"></div>
