@page "/login"

<PageTitle>로그인</PageTitle>

<MudText Typo="Typo.h3">로그인</MudText>

@if (IsChromeBrowser)
{
  <MudLink Href="/LoginExternal?provider=Google" Target="_top">
    <MudImage Src="/images/login/btn_google_signin_dark_normal_web.png" />
  </MudLink>
}
else
{
  <MudButton OnClick="LoginGoogleInOtherBrowser">
    <MudImage Src="/images/login/btn_google_signin_dark_normal_web.png" />
  </MudButton>
}

<MudLink Href="/LoginExternal?provider=KakaoTalk" Target="_top">
  <MudImage Src="/images/login/kakao_login_medium_narrow.png" />
</MudLink>


<MudText Color="Color.Transparent">@UserAgent</MudText>
