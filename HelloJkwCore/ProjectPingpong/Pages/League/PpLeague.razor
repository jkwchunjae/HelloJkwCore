@inherits JkwPageBase
@page "/jangtak9/league/{LeagueIdText}"
@layout PpLayout
@using MudBlazor
@using ProjectPingpong.Pages.League

@if (League == null)
{
  return;
}

@{
  var competitionUrl = $"/jangtak9/competition/{League!.Id.CompetitionName}";
}
<MudLink Href="@competitionUrl">
<MudText Typo="Typo.h3" Color="Color.Dark">
  @League!.Id.CompetitionName
</MudText>
</MudLink>
<MudButton OnClick="@(() => Navi.NavigateTo(competitionUrl))"
          Class="common-action"
          Variant="Variant.Outlined"
          Color="Color.Default"
      >대회 화면으로 돌아가기</MudButton>

<MudText Typo="Typo.h4">
  @League!.Id.LeagueName
</MudText>

<MudGrid>
    <MudItem md="12">
        @* 순위표 *@
        <PpLeagueTable League="@League"/>
    </MudItem>
    <MudItem md="4">
        @* 경기 순서 *@
        <PpLeagueMatchList @bind-League="@League"/>
    </MudItem>
</MudGrid>
