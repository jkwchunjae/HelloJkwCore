@inherits JkwPageBase
@layout PpLayout
@page "/jangtak9/competition/{CompetitionNameText}"
@using MudBlazor
@using ProjectPingpong.Utils

@if (CompetitionData == null)
{
  return;
}

<MudText Typo="Typo.h3">
  @CompetitionData!.Name
</MudText>

@if (CompetitionData.CanManage(User))
{
  <MudLink Href="@(PpNaviHelper.CompetitionSettingPage(CompetitionData!.Name))" Class="no-print">Settings</MudLink>
}

<PpCompetitionLeagueSetting @bind-CompetitionData="CompetitionData" Setting="@false"/>

