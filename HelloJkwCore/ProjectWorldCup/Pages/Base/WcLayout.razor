@inherits LayoutComponentBase

<MudThemeProvider Theme="currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudButton Href="/">
            <MudText Typo="Typo.h5" Class="ml-3" Style="font-family: 'Kaushan Script'; color: #fed136;">WorldCup 2022</MudText>
        </MudButton>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Filled.Brightness4" Color="Color.Inherit" Edge="Edge.End" OnClick="() => ToggleTheme()" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <WcNavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudPaper Elevation="0" Style="background-color: inherit;">
            <MudContainer Style="padding-top: 15px;">
                @Body
            </MudContainer>
        </MudPaper>
    </MudMainContent>
</MudLayout>

