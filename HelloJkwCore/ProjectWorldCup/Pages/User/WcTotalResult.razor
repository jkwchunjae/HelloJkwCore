@inherits JkwPageBase
@layout WcLayout
@page "/worldcup/2022/result"

<WcTitle>최종 결과</WcTitle>

<MudTable T="UserResult" Items="Results" Context="userResult">
    <HeaderContent>
        <MudTh>순위</MudTh>
        <MudTh>닉네임</MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<UserResult, object>(x => x.Reward1)">
                1라운드
            </MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<UserResult, object>(x => x.Reward2)">
                2라운드
            </MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<UserResult, object>(x => x.Reward3)">
                3라운드
            </MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<UserResult, object>(x => x.Total)">
                합계
            </MudTableSortLabel>
        </MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@userResult.Rank</MudTd>
        <MudTd>
            @if (userResult.UserId == User.Id)
            {
                var me = "me";
                <MudBadge Content="me" Overlap="false" Color="Color.Success">
                    <MudText>@userResult.Name</MudText>
                </MudBadge>
            }
            else
            {
                <MudText>@userResult.Name</MudText>
            }
        </MudTd>
        <MudTd>@userResult.Reward1</MudTd>
        <MudTd>@userResult.Reward2</MudTd>
        <MudTd>@userResult.Reward3</MudTd>
        <MudTd>@userResult.Total</MudTd>
    </RowTemplate>
</MudTable>
