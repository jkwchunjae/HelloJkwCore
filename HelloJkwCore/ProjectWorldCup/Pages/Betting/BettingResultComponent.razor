@inherits JkwPageBase

@if (BettingResult != null)
{
<MudTable Items="@BettingResult">
    <HeaderContent>
        <MudTh>닉네임</MudTh>
        <MudTh>성공</MudTh>
        <MudTh>실패</MudTh>
        <MudTh>점수</MudTh>
        <MudTh>배당금</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="닉네임">@context.User.DisplayName.Left(3)***</MudTd>
        <MudTd DataLabel="성공">
            <div>
            @foreach (var s in context.Success)
            {
                <img class="team-img success" src="@s.Flag"/>
            }
            </div>
        </MudTd>
        <MudTd DataLabel="실패">
            <div>
            @foreach (var s in context.Fail)
            {
                <img class="team-img fail" src="@s.Flag"/>
            }
            </div>
        </MudTd>
        <MudTd DataLabel="점수">@context.Score</MudTd>
        <MudTd DataLabel="배당금">@context.Reward</MudTd>
    </RowTemplate>
</MudTable>
}