@inherits JkwPageBase
@layout WcLayout

<MudTable Items="BettingResult" Dense="true">
  <HeaderContent>
    <MudTh>닉네임</MudTh>
    <MudTh>
      @if (FirstItem != null)
      {
        <div>
          <img class="team-img success" src="@FirstItem.Fix0?.Flag" />
          <img class="team-img success" src="@FirstItem.Fix1?.Flag" />
          <img class="team-img success" src="@FirstItem.Fix2?.Flag" />
          <img class="team-img success" src="@FirstItem.Fix3?.Flag" />
        </div>
      }
    </MudTh>
    <MudTh>최종 순위 점수</MudTh>
    <MudTh>결승전 점수</MudTh>
    <MudTh>4강 점수</MudTh>
    <MudTh>점수 합계</MudTh>
    <MudTh>상금</MudTh>
  </HeaderContent>
  <RowTemplate>
    <MudTd DataLabel="닉네임">
      @{
        List<string> badges = new();
        Color badgeColor = Color.Default;
        if (context.User == User)
        {
          badges.Add("me");
          badgeColor = Color.Success;
        }
        if (context.IsRandom)
        {
          badges.Add("random");
          badgeColor = Color.Info;
        }
      }
      @if (badges.Any())
      {
        var badgeText = badges.StringJoin(" ");
        <MudBadge Content="badgeText" Overlap="false" Color="badgeColor">
          <MudText>@context.User.DisplayName</MudText>
        </MudBadge>
      }
      else
      {
        <MudText>@context.User.DisplayName</MudText>
      }
    </MudTd>
    <MudTd DataLabel="선택">
      <div>
        @if (Visible)
        {
          <img class="team-img success" src="@context.Pick0?.Flag" />
          <img class="team-img success" src="@context.Pick1?.Flag" />
          <img class="team-img success" src="@context.Pick2?.Flag" />
          <img class="team-img success" src="@context.Pick3?.Flag" />
        }
      </div>
    </MudTd>
    <MudTd DataLabel="최종순위점수">
      @context.RankScore
    </MudTd>
    <MudTd DataLabel="결승전 점수">
      @context.FinalMatchScore
    </MudTd>
    <MudTd DataLabel="4강 점수">
      @context.SemiFinalMatchScore
    </MudTd>
    <MudTd DataLabel="점수 합계">
      @context.Score
    </MudTd>
    <MudTd DataLabel="상금">
      @context.Reward.ToString("#,#")
    </MudTd>
  </RowTemplate>
</MudTable>
